{
    "rootDir": "../",
    "roots": [
        "<rootDir>/src/",
        "<rootDir>/test/"
    ],
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/build/coverage",
    "coverageReporters": [
        "json",
        "html",
        "lcov",
        "text",
        "text-summary"
    ],
    "collectCoverageFrom": [
        "src/**"
    ],
    "coveragePathIgnorePatterns": [
        "src/index.js"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 20,
            "functions": 20,
            "lines": 20,
            "statements": 20
        }
    }
}

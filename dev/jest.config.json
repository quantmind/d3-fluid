{
    "rootDir": "../",
    "roots": [
        "<rootDir>/server/",
        "<rootDir>/app/",
        "<rootDir>/test/"
    ],
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/build/coverage",
    "coverageReporters": [
        "json",
        "html",
        "lcov",
        "text",
        "text-summary"
    ],
    "collectCoverageFrom": [
        "server/**",
        "app/**"
    ],
    "coveragePathIgnorePatterns": [
        "server/init",
        "server/index.js"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 10,
            "functions": 10,
            "lines": 10,
            "statements": 10
        }
    }
}

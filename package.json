{
    "version": "0.2.1",
    "name": "d3-fluid",
    "title": "d3-fluid - micro web framework with d3-view and express",
    "description": "Micro web framework with d3-view and express",
    "author": {
        "name": "quantmind.com",
        "email": "message@quantmind.com"
    },
    "keywords": [
        "d3",
        "express"
    ],
    "license": "BSD-3-Clause",
    "repository": {
        "type": "git",
        "url": "https://github.com/quantmind/d3-fluid.git"
    },
    "engines": {
        "node": ">= 6.0"
    },
    "main": "build/d3-fluid.js",
    "module": "index",
    "jsnext:main": "index",
    "bin": {
        "d3fluid": "bin/d3fluid"
    },
    "dependencies": {
        "commander": "2.13",
        "d3-let": "0.4",
        "d3-view": "1.2",
        "d3-view-components": "0.2",
        "express": "4.16",
        "feed": "1.1",
        "glob": "7.1",
        "handlebars": "4.0",
        "highlightjs": "9.10",
        "immutable": "3.8",
        "jsdom": "11.6",
        "morgan": "1.9",
        "remarkable": "1.7",
        "sitemap": "1.13",
        "tcp-port-used": "0.1"
    },
    "devDependencies": {
        "babel-core": "6.26",
        "babel-eslint": "8.2",
        "babel-plugin-external-helpers": "6.22",
        "babel-plugin-istanbul": "4.1",
        "babel-plugin-transform-object-rest-spread": "6.26",
        "babel-polyfill": "6.26",
        "babel-preset-env": "1.6",
        "babel-preset-es2015-rollup": "3.0",
        "babelify": "8.0",
        "d3-view-test": "0.1",
        "eslint": "4.16",
        "jest": "22.1",
        "publish": "0.6",
        "rollup": "0.55",
        "rollup-plugin-babel": "3.0",
        "rollup-plugin-json": "2.3",
        "rollup-plugin-node-resolve": "3.0",
        "rollup-plugin-sourcemaps": "0.4",
        "rollup-watch": "4.3",
        "supertest": "3.0"
    },
    "scripts": {
        "lint": "eslint dev test server app website/src",
        "test:unit": "jest -c dev/jest.config.json",
        "test": "npm run-script lint && npm run-script test:unit",
        "rollup": "rollup -c dev/rollup.config.js && chmod +x bin/d3fluid",
        "dev": "rollup -c dev/rollup.config.js -w",
        "prepublish": "npm run-script rollup",
        "postpublish": "VERSION=`node -e 'console.log(require(\"./package.json\").version)'`; git push && git tag -am \"Release $VERSION.\" v${VERSION} && git push --tags && mkdir -p ../giottojs.org/latest && mkdir -p ../giottojs.org/d3-view/${VERSION} && cp build/* ../giottojs.org/d3-view/${VERSION}/ && cp build/* ../giottojs.org/latest/ && cd ../giottojs.org && git add d3-view/${VERSION} latest && git commit -a -m \"d3-view ${VERSION}\" && git push",
        "release": "publish"
    }
}
